<!-- 绝对布局,即用 -->
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xfhy.absolutelayout.MainActivity" >
    
    <!-- 上面放的那张图 -->
    <ImageView
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="100dip"
        android:layout_y="50dip"
        android:src="@drawable/leaf"
        />
    
    <!-- 下面放的那张图 -->
    <ImageView
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="50dip"
        android:layout_y="300dip"
        android:src="@drawable/leaf"
        />
    
    <!-- 上面那张图的描述(x,y),背景是白色,文字颜色为淡紫色 -->
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="60dip"
        android:layout_y="45dip"
        android:background="#FFFFFF"
        android:textColor="#8b8bf3"
        android:text="当前的坐标点 x=100dip,y=50dip"
        />
    
    <!-- 第二张图的描述 -->
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="30dip"
        android:layout_y="295dip"
        android:background="#FFFFFF"
        android:textColor="#8b8bf3"
        android:text="当前的坐标点: x=50dip,y=300dip"
        />
    <Button 
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="250dip"
        android:layout_y="460dip"
        android:text="退出"
        />
</AbsoluteLayout>
